<!doctype html>
<html lang="{{ global.lang }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title ~ ' â€“ ' ~ global.title if title else global.title }}</title>
    {%- set css -%}
      {% include "css/variables.css" %}
      {% include "css/fonts.css" %}
      {% include "css/base.css" %}
    {%- endset -%}
    <style>{{ css | cssmin | safe }}</style>
    {% include 'snippets/meta.njk' %}
    {% if page.fileSlug == '' %}
      <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    {% endif %}
  </head>
  <body>
  
    <header>
      <h1>
        <a href="{{ '/' | url }}">{{ global.title }}</a>
      </h1>
      <nav>
      {{ collections.all | eleventyNavigation | eleventyNavigationToHtml | safe }}
      </nav>
    </header>

    <main>
      {{ content | safe }}
    </main>

    {% if global.footer %}
      <footer>
        {{ global.footer|markdownify|safe }}
      </footer>
    {% endif %}

    {% if page.fileSlug == '' %}
      <script>
        if (window.netlifyIdentity) {
          window.netlifyIdentity.on("init", user => {
            if (!user) {
              window.netlifyIdentity.on("login", () => {
                document.location.href = "/admin/";
              });
            }
          });
        }
      </script>
    {% endif %}

  </body>
</html>
